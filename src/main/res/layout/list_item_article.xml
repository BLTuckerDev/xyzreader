<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_material_light"
            android:contentDescription="@string/article_list_item_content_description"
            android:transitionName="@string/shared_image_transition_name"
            tools:src="@drawable/tools_image"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/ArticleListItemTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Agriculturist's Weekly Update, Delivered Once Daily, 24/7"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/ArticleListItemSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="A. Author"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
